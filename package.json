{
  "name": "grid-samples",
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.js",
    "prebuild": "npm run clean-public",
    "build": "webpack --config webpack.config.prod.js",
    "deploy": "node -r esm ./tasks/deploy.js ~/Public/kozakl.bitbucket.org/",
    "clean-cache": "node -r esm ./tasks/clean-cache.js",
    "clean-public": "node -r esm ./tasks/clean-public.js",
    "test": "jest --coverage",
    "test:watch": "npm run test -- --watchAll"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/src/.*.test)\\.tsx?$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ]
  },
  "dependencies": {
    "@kozakl/utils": "^3.1.1",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-router-dom": "^4.3.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "@kozakl/webpack-dev-server": "^3.1.6",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.0",
    "css-loader": "^1.0.0",
    "esm": "^3.0.84",
    "file-loader": "^1.1.11",
    "fs-extra": "^7.0.0",
    "gm": "^1.23.1",
    "jest": "^23.4.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-each": "^0.10.0",
    "postcss-extend": "^1.0.5",
    "postcss-for": "^2.1.1",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.6",
    "postcss-mixins": "^6.2.0",
    "postcss-nested": "^3.0.0",
    "postcss-simple-vars": "^4.1.0",
    "rest-optimize-webpack-plugin": "^1.0.2",
    "style-loader": "^0.21.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^4.4.2",
    "typescript": "^2.9.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.8"
  }
}
